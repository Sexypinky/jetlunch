<h1><%= params[:id]%> menu</h1>
<h3>Main course</h3>
<% @menu.where(weekday: params[:id], main: true).each do |menu|%>
  <table class="table table-sm">
    <thead>
    <tr>
      <th scope="col">Dish</th>
      <th scope="col">Price</th>
      <th scope="col">Photo</th>
    </tr>
    </thead>
    <tbody>
    <tr>
      <% if Date.today.strftime("%A") == params[:id]%>
      <td><%=link_to menu.dish,dashboard_addmain_path(main: menu.id, weekday: params[:id], price: menu.price, first: params[:first], total_price: params[:total_price])%></td>
      <%else%>
        <td><%=menu.dish%></td>
      <%end%>
      <td><%=menu.price%> RUB</td>
      <%if menu.image?%>
        <td><%= image_tag menu.image.url(:super_small), class:'image-index' if menu.image? %></td>
      <%else%>
        <td>Absent</td>
      <%end%>
    </tr>
    </tbody>
  </table>
  <% if current_user.admin?%>
    <%= link_to "Delete position",admin_menu_path(menu), method: :delete, class: 'btn btn-primary' %>
    <%= link_to "Edit position",edit_admin_menu_path(menu), class: 'btn btn-primary'%>
  <%end%>
  <br>
  <br>
<%end%>