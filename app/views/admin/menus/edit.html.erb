<h2>Edit menu position</h2>
<%= simple_form_for (@menu) , url: admin_menu_path, :method => :put do |f| %>

  <h5>Weekday</h5>
  <div class= "form_group">
    <%= f.text_field :weekday  %>
  </div>

  <h5>Dish name</h5>
  <div class= "form_group">
    <%= f.text_field :dish%>
  </div>

  <h5>Price</h5>
  <div class= "form_group">
    <%= f.text_field :price%>
  </div>

  <h5>Photo</h5>
  <div class= "form_group">
    <%= f.file_field :image %>
    <h6>Photo URL</h6>
    <%= f.text_field :remote_image_url %>
    <h6>Delete photo?</h6>
    <%= f.check_box :remove_image %>
  </div>

  <div class= "form_group">
    <%= f.button :submit, 'Update', class: 'btn btn-primary' %>
    <%= link_to 'Back', :back, class: 'btn btn-outline-secondary'%>
  </div>

<%end%>